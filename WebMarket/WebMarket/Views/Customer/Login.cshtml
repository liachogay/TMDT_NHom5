@model WebMarket.Models.AccountVM

@{
    ViewData["Title"] = "Login";
}
@section css{
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <style>
        label.error {
            color: orangered;
            font-size: 14px;
            font-family: 'Times New Roman', Times, serif
        }

        .btn-user {
            margin-top: 20px;
            font-size: 1rem;
            border-radius: 10rem;
            padding: 0.75rem 1rem;
            background-color: red;
            color: white;
        }
    </style>
}
<!-- login -->
<div class="login">
    <div class="container">
       
        <h2>Login Form</h2>

        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form asp-action="Login" asp-controller="Customer">
                <input asp-for="UserName" type="email" placeholder="Email Address" required>
                <input asp-for="PassWord" type="password" placeholder="Password" required>
                <div class="error">@ViewBag.Error  </div>
                <div class="error"> @ViewBag.Status  </div>
               
                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                </div>
                <input type="submit" value="Login">
            </form>
            <hr />
            <a href="@Url.Action("LoginGmail","Customer",new { type="login"})" class="btn btn-google btn-user btn-block">
                <i class="fab fa-google fa-fw"></i> Login with Google
            </a>
        </div>
        
        <h4>For New People</h4>
        <p><a href="~/Customer/Register">Register Here</a> (Or) go back to <a href="~/Home">Home<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a></p>
    </div>
</div>
<!-- //login -->
