@model WebMarket.Entities.Product

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}
@section Styles{
    <!-- Custom styles for this page -->
    <style>
         @@media (max-width: 992px){
            #Editproduct{
                display:block!important;
            }
         }
    </style>
}
<div style="display:flex">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800" style="font-weight: 700;">Edit Product</h1>
    </div>
    <div style="margin-left: auto; order: 2;">
        <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-outline-info shadow-sm">
            <img src="https://img.icons8.com/cotton/64/000000/circled-left-2.png" style="height:20px; width:20px" />
            Back to List
        </a>
    </div>
</div>

<hr />
<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data" method="post" class="col-12">
        <div class="col-lg-12" style="display:flex" id="Editproduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-3 col-md-12">
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control d-none" />
                    <input asp-for="Image" name="file" id="imgInp" type="file" />
                    <img id="blah" src="@Url.Content(Model.Image)" width="150px" height="150px" />
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control " />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <input name="old_price" class="form-control d-none" value="@Model.Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdProvider" class="control-label">Provider</label>
                    <select asp-for="IdProvider" class="form-control" asp-items="ViewBag.IdProvider"></select>
                    <span asp-validation-for="IdProvider" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdType" class="control-label">Type</label>
                    <select asp-for="IdType" class="form-control" asp-items="ViewBag.IdType"></select>
                    <span asp-validation-for="IdType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" style="height:383px"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-none">
                <input asp-for="Id" class="form-control d-none" />
                <input type="hidden" name="Id_priceupdate" value="@ViewBag.Id_priceupdate" />
            </div>
            <div class="form-group d-none">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group" >
            <input type="submit" value="Save" class="btn btn-success shadow-sm ml-4 mb-3" />
        </div>
    </form>
</div>



@section Scripts{
    <script src="~/js/readURL.js"></script>
}